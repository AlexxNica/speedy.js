{
  "name": "speedyjs-compiler",
  "version": "0.0.1",
  "main": "index.js",
  "bin": {
    "speedyjs": "./cli.js"
  },
  "author": "Micha Reiser <micha@famreiser.ch>",
  "license": "MIT",
  "repository": "https://github.com/MichaReiser/speedy.js.git",
  "devDependencies": {
    "@types/jasmine": "^2.5.47",
    "@types/jest": "^19.2.3",
    "env-cmd": "^5.1.0",
    "gulp": "^3.9.1",
    "jasmine-core": "^2.6.1",
    "jest": "^19.0.2",
    "karma": "^1.6.0",
    "karma-chrome-launcher": "^2.1.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-sauce-launcher": "^1.1.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.3",
    "merge-stream": "^1.0.1",
    "speedyjs-loader": "0.x.x",
    "ts-jest": "^19.0.14",
    "webpack": "^2.5.0"
  },
  "dependencies": {
    "@types/commander": "^2.9.0",
    "@types/debug": "^0.0.29",
    "@types/lodash": "^4.14.63",
    "@types/node": "^7.0.18",
    "@types/tmp": "0.0.33",
    "commander": "^2.9.0",
    "debug": "^2.6.6",
    "lodash": "^4.17.4",
    "speedyjs-runtime": "0.x.x",
    "tmp": "0.0.31",
    "typescript": "MichaReiser/TypeScript#release"
  },
  "scripts": {
    "preinstall": "node ./scripts/install-dependencies.js",
    "postinstall": "env-cmd ./env.js npm install llvm-node@^1.0.0",
    "prepublish": "tsc",
    "start": "tsc --watch",
    "test": "jest && karma start karma.conf.js --single-run",
    "test:watch": "jest --watch",
    "test:integration:watch": "karma start karma.conf.js"
  },
  "jest": {
    "transform": {
      ".(ts)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/__tests__/cases/.*\\.(js|ll)$"
    ]
  }
}
